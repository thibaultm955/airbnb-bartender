<h2> My account</h2>

<%= @user.last_name%>
<%= @user.first_name %>

<%= @user.address %>
<%= @user.email%>

<%= link_to "edit my account", edit_user_path(current_user) %>

<!--- <%= link_to "change my logs : mail & password", edit_user_registration_path(current_user) ,class: "dropdown-item"%> --->



<% if @bartender == "you're not a bartender" %>
    <%= "you're not still a bartender"%>
<% else %>
    <h2> My bartender's account</h2>
    <p><%= @bartender.description %></p>

    <% @bartender.specialty.each do |specialty| %>
      <p> <strong> <%= specialty %> </strong> &nbsp; </p>
    <% end %>

    <p><%= @bartender.price_per_day %></p>
    <%= link_to "edit my bartender's account", edit_bartender_path(@bartender) %>
    <%= link_to bartender_path(@bartender), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
    <% end %>
<% end  %>
